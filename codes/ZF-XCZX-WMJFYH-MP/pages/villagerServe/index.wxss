.page {
    min-height: 100vh;
    background: #f6f6f6;
    padding-bottom: calc(calc(100rpx + env(safe-area-inset-bottom) / 2));
    box-sizing: border-box;
}

.page-content {
    padding: 30rpx;
    box-sizing: border-box;
}

.title {
    font-size: 32rpx;
    font-weight: 600;
    padding-left: 28rpx;
    position: relative;
    margin-bottom: 40rpx;
}

.title .xian {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8rpx;
    height: 32rpx;
    background: #0ab481;
    border-radius: 8rpx;
}

