.lifeServe .list {
    margin: 0 -15rpx 0rpx;
    flex-wrap: wrap;
    line-height: 1.1;
}

.lifeServe .list .item {
    margin: 0 15rpx 30rpx;
    width: 210rpx;
    height: 180rpx;
    background: #ffffff;
    border-radius: 20rpx;
    text-align: center;
    font-size: 24rpx;
}

.lifeServe .list .item image {
    width: 88rpx;
    margin-bottom: 13rpx;
}


.otherServe .list .item {
    font-size: 32rpx;
    line-height: 1.1;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.90);
    height: 100rpx;
    background: #ffffff;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    padding: 0 30rpx 0 20rpx;
    box-sizing: border-box;
}

.otherServe .list .icon {
    width: 60rpx;
    margin-right: 20rpx;
}

.otherServe .list .arrow image {
    width: 40rpx;
}

.list2 {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
    text-align: center;
}


.list2 image {
    width: 108rpx;
    margin-bottom: 10rpx;
}