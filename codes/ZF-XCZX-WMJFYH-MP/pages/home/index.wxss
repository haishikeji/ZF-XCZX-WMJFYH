.codeBox {
    width: 570rpx;
    border-radius: 40rpx;
    background: #fff;
    position: relative;
    border-radius: 40rpx;
    overflow: hidden;
}

.codeBox .popBg {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}

.codeCont {
    position: relative;
    text-align: center;
    padding-top: 160rpx;
    padding-bottom: 60rpx;
}

.codeCont .tit {
    font-size: 44rpx;
    font-weight: 600;
    color: #000000;
    margin-bottom: 56rpx;
}

.codeCont .codePic {
    width: 290rpx;
    margin-bottom: 110rpx;
}

.codeCont .text1 {
    font-size: 36rpx;
    font-weight: 500;
    color: #0faf7f;
    margin-bottom: 15rpx;
}

.codeCont .text2 {
    font-size: 24rpx;
    color: #0faf7f;
}

.zhangbei {
    width: 550rpx;
    padding-top: 60rpx;
    text-align: center;
    background: #ffffff;
}

.zhangbei .tit1 {
    font-size: 40rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 20rpx;
}

.zhangbei .tit2 {
    font-size: 32rpx;
    color: #0ab481;
    margin-bottom: 55rpx;
}

.zhangbei .pic {
    width: 400rpx;
    height: 308rpx;
    margin: 0 auto;
}

.zhangbei .pic image {
    width: 100%;
    height: 100%;
}

.zhangbei .btn {
    flex: 1;
    border-top: 2rpx solid #f6f6f6;
    height: 110rpx;
    font-size: 32rpx;
    color: #666666;
    font-weight: 500;
}

.zhangbei .btn2 {
    color: #0ab481;
    border-left: 1rpx solid #f6f6f6;
}