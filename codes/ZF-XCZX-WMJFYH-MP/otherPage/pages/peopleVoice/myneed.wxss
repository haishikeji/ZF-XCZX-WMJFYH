/* pages/mine/myneed.wxss */
page
{
  background-color: #f7f7f7;
}
.list
{
  padding: 30rpx;
  box-sizing: border-box;
}
.item
{
  background-color: #ffffff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.item-title
{
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 30rpx;
}
.item-title-t
{
  font-size: 30rpx;
  font-weight: bold;
}
.item-title-s
{
  font-size: 24rpx;
  color: #FC7330;
}
.pass
{
  color: #1D7CFD;
}
.nopass
{
  color: #FE5050;
}
.item-content
{
  display: flex;
  /* align-items: center; */
  font-size: 26rpx;
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.item-line
{
  width: 100%;
  height: 2rpx;
  background-color:#f7f7f7;
}
.item-info
{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item-info-l
{
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.item-info-l image
{
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background-color: #f7f7f7;
  margin-right: 20rpx;
}
.item-info-r
{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}
.item-info-r image
{
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}