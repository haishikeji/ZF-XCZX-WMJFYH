/* pages/home/needs.wxss */
.page {
    background: #fff;
    min-height: 100vh;
}

.addmagin {
    margin-top: 30rpx !important;
}

.inputitem {
    /* display: flex; */
    margin: 0rpx 30rpx 30rpx;
    width: 690rpx;
    /* align-items: center; */
}

.title {
    font-size: 32rpx;
    /* width: 150rpx; */
    color: #000000;
    margin-bottom: 30rpx;
}

.content {
    padding: 20rpx;
    box-sizing: border-box;
    border: 2rpx solid #f7f7f7;
    border-radius: 20rpx;
}

.txt {
    align-items: flex-start;
}

.txt .title {
    margin-top: 20rpx;
}

.content textarea {
    resize: none;
    width: 480rpx;
    height: 200rpx;
    font-size: 28rpx;
}

.content input {
    font-size: 28rpx;
    width: 480rpx;
}

.btn {
    width: 690rpx;
    height: 100rpx;
    text-align: center;
    color: #ffffff;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 100rpx;
    background: linear-gradient(270deg, #18be8d 0%, #3ad190 100%);
    border-radius: 74rpx;
    margin: 50rpx auto 30rpx;
}