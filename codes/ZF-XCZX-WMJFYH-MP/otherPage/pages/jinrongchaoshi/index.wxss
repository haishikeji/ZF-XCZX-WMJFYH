.banner .item {
    text-align: center;
}

.banner .item .icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 5rpx;
}

.banks {
    display: flex;
    flex-wrap: wrap;
}

.banks .banksItem {
    width: calc(20% - 20rpx);
    text-align: center;
    margin: 0 10rpx 30rpx;
    font-size: 24rpx;
}

.banks .banksItem image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.list .item {
    background: #ffffff;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.list .item image {
    width: 100%;
    height: 240rpx;
}

.list .item .tit {
    padding: 20rpx 30rpx 10rpx;
    font-size: 32rpx;
    font-weight: 500;
    box-sizing: border-box;
}

.list .item .dec {
    padding: 0 30rpx 20rpx;
    box-sizing: border-box;
    color: #999999;
}

.nodata {
    position: relative;
    height: 50vh;
    background-color: none;
    background: none;
}