/* otherPage/pages/jinrongchaoshi/index.wxss */
.page {
    min-height: 100vh;
    box-sizing: border-box;
    position: relative;
    background: linear-gradient(180deg, #ffffff 700rpx, #f6f6f6 900rpx, #f6f6f6 100%);
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
}

.page-content {
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.banner {
    overflow: hidden;
    margin: 0 -30rpx 30rpx;
}

.banner swiper {
    width: 100%;
    height: 240rpx;
}

.banner swiper-item {
    width: 100%;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.banner swiper-item image {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 20rpx;
    background: #f6f6f6;
}

