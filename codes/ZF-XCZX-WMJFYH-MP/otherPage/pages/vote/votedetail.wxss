button.sharebtn {
    background: none;
    padding: 0;
    margin: 0;
    text-align: center;
    font-size: 24rpx;
    line-height: 1.1;
}

.sharebtn image {
    width: 40rpx;
}

.nostart {
    background: #999999 !important;
    box-shadow: none !important;
}

.whitespace {
    margin-top: 50rpx;
}

.act_img {
    width: 100%;
    margin: 40rpx 0;
}

.activityview {
    margin: 30rpx;
    padding: 30rpx;
    box-sizing: border-box;
    width: 690rpx;
    border: 2rpx solid #f7f7f7;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.act_title {
    font-size: 34rpx;
    font-weight: bold;
    /* margin-top: 20rpx; */
}

.act_desc {
    width: 630rpx;
    margin-top: 30rpx;
}

.act_desc image {
    width: 630rpx !important;
}

.actback {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 26rpx;
    color: #0A6ACC;
    padding-top: 0;
}

.actback image {
    width: 36rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.fix {
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    height: 140rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background: #ffffff;
    border-radius: 40rpx 40rpx 0rpx 0rpx;
    box-shadow: 0rpx -4rpx 16rpx 0rpx rgba(0, 0, 0, 0.04);
}

.popview {
    width: 690rpx;
    height: 300rpx;
    background-color: #ffffff;
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
}

.poptitle {
    font-weight: bold;
    margin-bottom: 50rpx;
    width: 100%;
    text-align: center;
}

.popbody {
    width: 100%;
}

.popalert {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
}