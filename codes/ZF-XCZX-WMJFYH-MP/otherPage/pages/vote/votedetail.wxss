.numtext {
    font-weight: bold;
    font-size: 32rpx;
}

.banner {
    width: 100%;
}

.bomview {
    position: fixed;
    left: 0;
    bottom: 0;
    /* height: 120rpx; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    border-top: 2rpx solid #f7f7f7;
    width: 100%;
    box-sizing: border-box;
}

.bomview-left {
    display: flex;
    align-items: center;
}

.bomitem {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 26rpx;
    color: #333333;
    margin-right: 50rpx;
}

.bomitem image {
    width: 40rpx;
    height: 40rpx;
    background-color: #f7f7f7;
}

.bomview-right {
    width: 300rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: #ffffff;
    font-size: 30rpx;
    background-color: #0AB481;
    border-radius: 10rpx;
}

.userinfo {
    padding: 15rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    font-size: 32rpx;
    font-weight: bold;
}

.userinfo image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 10rpx;
}

.descBox {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.descBox .title {
    font-size: 32rpx;
    font-weight: 500;
    color: #0ab481;
    margin-bottom: 20rpx;

}

.descBox .title image {
    width: 32rpx;
    margin-right: 10rpx;
}

.desc {
    color: #666666;
    font-size: 28rpx;
}

.desc image {
    width: 100% !important;
}

.votebtn {
    width: 600rpx;
    height: 80rpx;
    background: linear-gradient(270deg, #18be8d 0%, #3ad190 100%);
    border-radius: 20rpx;
    box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(47, 203, 143, 0.32);
    font-size: 32rpx;
    font-weight: 600;
    color: #ffffff;
    text-align: center;
    line-height: 80rpx;
}

