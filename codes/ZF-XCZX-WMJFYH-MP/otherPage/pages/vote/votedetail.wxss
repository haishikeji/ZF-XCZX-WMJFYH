@import "/wxParse/wxParse.wxss";

page {
    padding-bottom: 1rpx;
    background-color: #F6F6F6 !important;
}

.page-content {
    margin-top: -60rpx;
    padding: 0 30rpx 140rpx;
    box-sizing: border-box;
    position: relative;
}

.numinfoBox {
    box-sizing: border-box;
    margin-top: -60rpx;
    position: relative;
    margin-bottom: 30rpx;
}

.numinfoCont {
    background-color: #ffffff;
    border-radius: 20rpx;
}

.numinfoCont .title {
    padding: 28rpx 30rpx 0rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #000000;
}

.numinfo {
    padding: 30rpx 0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.numinfo-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 24rpx;
    color: #666;
    width: 250rpx;
}

.numinfo-num {
    font-size: 40rpx;
    color: #000000;
    font-weight: 700;
    letter-spacing: 1rpx;
    margin-bottom: 10rpx;
}

.addline {
    border-left: 2rpx solid #f3f3f3;
    border-right: 2rpx solid #f3f3f3;
}

