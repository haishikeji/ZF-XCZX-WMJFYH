.btnBox {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 140rpx;
    background: #ffffff;
    border-radius: 40rpx 40rpx 0rpx 0rpx;
    box-shadow: 0rpx -4rpx 16rpx 0rpx rgba(0, 0, 0, 0.04);
}

.btnBox .btn {
    width: 690rpx;
    height: 80rpx;
    background: linear-gradient(270deg, #18be8d 0%, #3ad190 100%);
    border-radius: 20rpx;
    font-size: 32rpx;
    color: #ffffff;
    font-weight: 600;
}

.xuzhi {
    font-size: 28rpx;
    color: #666666;
}

.xuzhi view {
    font-family: PingFang SC;
    font-weight: 500;
    margin-bottom: 10rpx;
    line-height: 44rpx;
}

.goodsInfo {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 28rpx 30rpx 0;
    margin-bottom: 20rpx;
}

.goodsInfo .name {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 20rpx;
}

.goodsInfo .icon {
    width: 28rpx;
    margin-right: 10rpx;
}

.goodsInfo .xian {
    width: 0rpx;
    height: 28rpx;
    border: 2rpx solid #f6f6f6;
    margin: 0 20rpx;
}

.goodsInfo .numBox {
    margin-top: 20rpx;
    height: 68rpx;
    color: #f22d39;
    border-top: 2rpx solid #f6f6f6;
}

.goodsInfo .num {
    font-size: 36rpx;
    font-weight: 500;
    color: #f22d39;
}

.shopBox {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 20rpx 80rpx 20rpx 20rpx;
    box-sizing: border-box;
    position: relative;
    margin-bottom: 30rpx;
}

.shopBox .pic {
    width: 100rpx;
    height: 100rpx;
    border: 2rpx solid #f6f6f6;
    border-radius: 20rpx;
    margin-right: 20rpx;
}

.shopBox .name {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 15rpx;
}

.shopBox .address {
    color: #999999;
}

.shopBox .GPSbtn {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 60rpx;
    color: #0ab481;
    text-align: center;
}

.xuzhiBox {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.xuzhiBox .title {
    font-size: 32rpx;
    color: #0ab481;
    margin-bottom: 20rpx;
}

.xuzhiBox .title image {
    width: 32rpx;
    margin-right: 12rpx;
}