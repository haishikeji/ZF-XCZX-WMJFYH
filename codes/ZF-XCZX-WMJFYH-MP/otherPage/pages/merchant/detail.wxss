.page {
    min-height: 100vh;
    background: #f6f6f6;
    padding-bottom: 160rpx;
}

.page-content {
    margin-top: -60rpx;
    position: relative;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.banner {
    width: 100%;
    height: 750rpx;
    background-color: #f7f7f7;
}

.info {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333333;
}

