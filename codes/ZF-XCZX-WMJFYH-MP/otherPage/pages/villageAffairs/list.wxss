/* otherPage/pages/villageAffairs/list.wxss */

.page {
  min-height: 100vh;
  background-color: #F6F6F6;
}


.shaixuanBox {
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
  position: sticky;
  left: 0;
  right: 0;
  z-index: 10;
}

.shaixuanBox .searchBox {
  /* width: 480rpx; */
  width: 100%;
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
}

.shaixuanBox .searchBox .icon {
  padding-left: 30rpx;
  padding-right: 20rpx;
  height: 100%;
}

.shaixuanBox .searchBox input {
  height: 100%;
  width: calc(100% - 88rpx);
  text-align: center;
  padding-right: 88rpx;
  box-sizing: border-box;
}

.shaixuanBox .btn2 {
  width: 180rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 94rpx;
  font-size: 30rpx;
  color: #000000;
}

.list {
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
}

.list .item {
  margin-top: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}

.item .tit {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.item .time {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 25rpx;
}

.item .icon {
  width: 28rpx;
  margin-right: 20rpx;
}

.mar-b-10 {
  margin-bottom: 10rpx;
}

.item .btn {
  width: 160rpx;
  height: 60rpx;
  background: #0ab481;
  border-radius: 102rpx;
  font-weight: 500;
  color: #ffffff;
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}