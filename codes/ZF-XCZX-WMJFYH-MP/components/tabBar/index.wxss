.codeBtn {
    position: relative;

}

.codeBtn .topPic {
    position: absolute;
    width: 150rpx;
    max-width: 150rpx;
    top: 5rpx;
    left: 50%;
    transform: translate(-50%, -100%);

}

.codeBtn .icon {
    width: 100rpx;
    height: 100rpx;
    transform: translateY(-10rpx);
}

.codeBox {
    width: 570rpx;
    border-radius: 40rpx;
    background: #fff;
    position: relative;
    border-radius: 40rpx;
    overflow: hidden;
}

.codeBox .popBg {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}

.codeCont {
    position: relative;
    text-align: center;
    padding-top: 160rpx;
    padding-bottom: 60rpx;
}

.codeCont .tit {
    font-size: 44rpx;
    font-weight: 600;
    color: #000000;
    margin-bottom: 56rpx;
}

.codeCont .codePic {
    width: 290rpx;
    margin-bottom: 110rpx;
}

.codeCont .text1 {
    font-size: 36rpx;
    font-weight: 500;
    color: #0faf7f;
    margin-bottom: 15rpx;
}

.codeCont .text2 {
    font-size: 24rpx;
    color: #0faf7f;
}