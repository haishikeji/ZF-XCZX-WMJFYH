@import "./../../colorui/main.wxss";

.tabbar {
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 5;
    font-size: 20rpx;
    box-shadow: 0rpx -4rpx 12rpx 0rpx rgba(0, 0, 0, 0.08);
}

.action {
    color: #666666;
    font-size: 24rpx;
}

.cu-btn {
    font-size: 0;
    box-shadow: none;
    width: 65rpx;
    height: 65rpx;
    line-height: 65rpx;
}

.cu-btn:not([class*="bg-"]) {
    background-color: #fff;
}

.on {
    color: #0AB481;
}

