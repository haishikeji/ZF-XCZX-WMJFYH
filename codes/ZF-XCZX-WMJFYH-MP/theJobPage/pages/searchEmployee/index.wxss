/* theJobPage/pages/searchEmployee/index.wxss */
.page {
  padding: 30rpx;
  box-sizing: border-box;
}

.search_box {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.search {
  width: 520rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 94rpx;
  padding: 24rpx;
}
.search_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search_btn {
  width: 140rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #000000;
}

.search_btn_icon {
  width: 32rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.choose_box {
  margin-bottom: 30rpx;
}

.choose_select {
  width: 330rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 40rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 28rpx;
}

.choose_select .icon {
  transform: rotate(90deg);
  color: #999999;
}

.moren {
  color: #999999;
}

.item {
  width: 690rpx;
  /* height: 320rpx; */
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 30rpx 0;
  margin-bottom: 30rpx;
}
.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  line-height: 1.1;
  margin-bottom: 30rpx;
}
.tag {
  min-width: 80rpx;
  width: 80rpx;
  height: 36rpx;
  background: linear-gradient(90deg,#48a7ff, #339dff 100%);
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 400;
  text-align: CENTER;
  color: #ffffff;
  line-height: 36rpx;
  margin-right: 20rpx;
}
.info {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 1.1;
  margin-bottom: 20rpx;
}
.bot {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  /* line-height: 28rpx; */
  line-height: 1.1;
  padding: 26rpx 0;
  border-top: 2rpx solid #f6f6f6;
}
.xz {
  font-size: 24rpx;
  font-weight: 400;
  color: #ff3131;
  line-height: 24rpx;
}
.xz-red {
  font-size: 36rpx;
  font-weight: 400;
  color: #ff3131;
  line-height: 36rpx;
}
.icon {
  min-width: 28rpx;
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.pos {
  position: fixed;
  top: 60vh;
  right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  background: #d9d9d9 linear-gradient(270deg,#18be8d 0%, #3ad190 100%);
  border-radius: 50%;
  box-shadow: 4rpx 8rpx 8rpx 0rpx #b9e5d4; 
}
.pos_item {
  width: 128rpx;
  height: 128rpx;
  border: 2rpx solid #ffffff;
  border-radius: 50%;
  padding: 20rpx 26rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 44rpx;
}

.nolist {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
  justify-content: center;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  z-index: 3;
  margin-top: 20vh;
}
.nolist image {
  width: 300rpx;
}

