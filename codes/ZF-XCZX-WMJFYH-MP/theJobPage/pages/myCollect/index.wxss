/* theJobPage/pages/myCollect/index.wxss */
.page {
    padding: 30rpx;
}

image {
    height: auto;
}
.searchBox {
    height: 80rpx;
    background: #ffffff;
    border-radius: 94rpx;
    margin-bottom: 30rpx;
}

.searchBox .icon {
    padding-left: 30rpx;
    padding-right: 20rpx;
    height: 100%;
}

.searchBox input {
    height: 100%;
    width: calc(100% - 88rpx);
}

.list_0 .item {
    width: 690rpx;
    /* height: 280rpx; */
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx 30rpx 0;
    margin-bottom: 30rpx;
}

.list_0 .title {
    font-size: 32rpx;
    font-weight: 500;
    color: #000000;
    line-height: 32rpx;
    margin-bottom: 30rpx;
}

.list_0 .red_font {
    font-size: 28rpx;
    font-weight: 400;
    color: #ff3131;
    line-height: 28rpx;
    margin-bottom: 20rpx;
}

.list_0 .infos {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 28rpx;
    flex-wrap: wrap;
    margin-bottom: 10rpx;
}

.list_0 .info {
    margin-right: 30rpx;
    margin-bottom: 20rpx;
}

.list_0 .bot {
    font-size: 28rpx;
    font-weight: 400;
    color: #000000;
    line-height: 28rpx;
    padding-top: 26rpx;
    padding-bottom: 30rpx;
    border-top: 2rpx solid #f6f6f6;
}

.icon {
    min-width: 28rpx;
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.list_1 .item {
    width: 690rpx;
    /* height: 320rpx; */
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx 30rpx 0;
    margin-bottom: 30rpx;
}

.list_1 .title {
    font-size: 32rpx;
    font-weight: 500;
    color: #000000;
    line-height: 32rpx;
    margin-bottom: 30rpx;
}

.list_1 .tag {
    min-width: 80rpx;
    width: 80rpx;
    height: 36rpx;
    background: linear-gradient(90deg, #48a7ff, #339dff 100%);
    border-radius: 8rpx;
    font-size: 24rpx;
    font-weight: 400;
    text-align: CENTER;
    color: #ffffff;
    line-height: 36rpx;
    margin-right: 20rpx;
}

.list_1 .info {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 28rpx;
    margin-bottom: 20rpx;
}

.list_1 .bot {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
    line-height: 28rpx;
    padding: 26rpx 0;
    border-top: 2rpx solid #f6f6f6;
}

.xz {
    font-size: 24rpx;
    font-weight: 400;
    color: #ff3131;
    line-height: 24rpx;
}

.xz-red {
    font-size: 36rpx;
    font-weight: 400;
    color: #ff3131;
    line-height: 36rpx;
}

.nolist {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #999999;
    justify-content: center;
    padding-bottom: 60rpx;
    box-sizing: border-box;
    z-index: 3;
    margin-top: 20vh;
}

.nolist image {
    width: 300rpx;
}


.activity-item {
    /* display: flex; */
    border-radius: 20rpx;
    padding: 30rpx;
    background: #fff;
    align-items: center;
    margin-bottom: 30rpx;
}

.activity-item image {
    width: 220rpx;
    height: 170rpx;
    background-color: #f7f7f7;
    border-radius: 10rpx;
    margin-bottom: 0;
}

.activity-info {
    /* width: 430rpx; */
    /* min-height: 170rpx; */
    display: flex;
    flex-wrap: wrap;
    align-content: space-between;
}

.activity-title {
    font-size: 32rpx;
    color: #333333;
    /* height: 120rpx; */
    font-weight: 500;
    color: #000000;
    width: 100%;
    margin-bottom: 20rpx;
}

.activity-time {
    font-size: 24rpx;
    color: #999;
    text-align: right;
    margin-top: 10rpx;
    width: 100%;
}

.activity-time .icon {
    width: 24rpx;
    margin-right: 10rpx;
}

.activity-content {
    font-size: 24rpx;
    color: #000000;
    margin-bottom: 20rpx;
}
