/* theJobPage/pages/searchJob/detail.wxss */
.page {
    padding: 30rpx;
    padding-bottom: 180rpx;
}

.info_card {
    width: 690rpx;
    background: #ffffff;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
}

.info .left {
    min-width: 180rpx;
    width: 180rpx;
    height: 240rpx;
    border-radius: 20rpx;
    margin: 30rpx 30rpx 20rpx;
}

.info .right {
    flex: 1;
    margin-top: 30rpx;
    margin-right: 30rpx;
}

.info .title {
    font-size: 32rpx;
    font-weight: 500;
    color: #000000;
    line-height: 1.1;
    margin-bottom: 30rpx;
    word-break: break-all;
}

.info .red_font {
    font-size: 28rpx;
    font-weight: 400;
    color: #ff3131;
    line-height: 28rpx;
    margin-bottom: 20rpx;
}

.info .details {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 28rpx;
    margin-bottom: 20rpx;
}

.info .icon {
    min-width: 28rpx;
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.card_bot {
    font-size: 28rpx;
    font-weight: 400;
    color: #333333;
    padding: 20rpx 30rpx;
    border: 2rpx solid #f6f6f6;
}

.content {
    width: 690rpx;
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
}

.content .title {
    font-size: 32rpx;
    font-weight: 500;
    color: #0ab481;
    line-height: 1.1;
    margin-bottom: 20rpx;
    word-break: break-all;
}

.content .icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.text {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 50rpx;
    word-break: break-all;
}

.pos {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    height: 140rpx;
    background: #ffffff;
    border-radius: 40rpx 40rpx 0rpx 0rpx;
    box-shadow: 0rpx -4rpx 16rpx 0rpx rgba(0, 0, 0, 0.04);
    padding: 30rpx;
}

.collect {
    width: 80rpx;
    font-size: 24rpx;
    font-weight: 400;
    text-align: center;
    color: #000000;
    line-height: 24rpx;
}

.collect image {
    width: 40rpx;
    height: 38rpx;
    border-radius: 2rpx;
    margin-bottom: 12rpx;
}

.btn {
    width: 600rpx;
    height: 80rpx;
    background: linear-gradient(270deg, #18be8d 0%, #3ad190 100%);
    border-radius: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
    text-align: center;
    color: #ffffff;
    line-height: 80rpx;
    margin: 0;
}